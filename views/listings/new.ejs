 <%= layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2" >
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3 mt-3">
        <label for="title" class="form-lable">Title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" required class="form-control">
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Tital shold be valid</div>
        </div>
         <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback">Description shold be valid</div>
       </div>
        <div class="mb-3" >
        <label for="image" class="form-lable">Upload Image</label>
        <input name="listing[image]" type="file" class="form-control" required>
        </div>
         <div class="mb-3">
        <label for="price" class="form-lable">Price</label>
        <input name="listing[price]" placeholder="Enter price" class="form-control" required>
        <div class="invalid-feedback">Price shold be valid</div>
        </div>
       <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input name="listing[location]" placeholder="Enter location" class="form-control" type="text" required>
        <div class="invalid-feedback">Fill Location</div>
       </div>
       <div class="mb-3">
        <label for="country" class="form-lable">Country</label>
        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
        <div class="invalid-feedback">Choose Your Country</div>
       </div>
       <br>
        
        <button class="btn btn-dark add-btn">Add</button>
        <br>
        <br>
    </form>
</div>
</div>